{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "features/**/*.ts",
    "features/**/*.tsx",
    "shared/**/*.ts",
    "shared/**/*.tsx",
    "types/**/*.ts",
    "config/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "**/.next/**/*"
  ]
} 